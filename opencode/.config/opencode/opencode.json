        },
        "qwen/qwen2.5-coder-14b": {
          "name": "qwen/qwen2.5-coder-14b"
        },
        "qwen/qwen3-14b": {
          "name": "qwen/qwen3-14b"
        },
        "qwen/qwen3-8b": {
          "name": "qwen/qwen3-8b"
        },
        "qwen/qwen3-4b": {
          "name": "qwen/qwen3-4b"
