theme "catppuccin-mocha"

keybinds {
    // clear defaults to unbind "Ctrl q" so that we can use it in Telescope for neovim
    unbind "Ctrl q" // unbind in all modes
    normal {
        unbind "Ctrl p"
        bind "Ctrl y" { SwitchToMode "pane"; }

        unbind "Ctrl n"
        bind "Ctrl b" { SwitchToMode "resize"; }

        unbind "Ctrl o"
        bind "Ctrl s" { SwitchToMode "session"; }
    }
}

